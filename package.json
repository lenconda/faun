{
  "name": "polyatomic",
  "version": "0.0.1",
  "description": "A more simple way to make micro front-end apps",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "lint": "eslint ./src",
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production npm run clean && rollup -c build/rollup.config.js",
    "install:framework": "cd examples/framework && npm i",
    "install:vue": "cd examples/vue && npm i",
    "install:react": "cd examples/react && npm i",
    "example:install": "npm-run-all --serial install:*",
    "start:framework": "webpack-dev-server --config examples/framework/build/webpack.config.js --mode=development --progress",
    "start:vue": "cd examples/vue && npm start",
    "start:react": "cd examples/react && npm start",
    "example:start": "npm-run-all --parallel start:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lenconda/polyatomic.git"
  },
  "files": [
    "src",
    "typings/*.d.ts",
    "dist/*.js"
  ],
  "keywords": [
    "microfrontends"
  ],
  "author": "lenconda",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/lenconda/polyatomic/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "homepage": "https://github.com/lenconda/polyatomic#readme",
  "dependencies": {
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "unfetch": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-flow": "^7.10.4",
    "@rollup/plugin-babel": "^5.0.2",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/history": "^4.7.5",
    "@types/lodash": "^4.14.150",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "cross-env": "^7.0.2",
    "docsify-cli": "^4.4.0",
    "eslint": "^6.8.0",
    "eslint-config-alloy": "^3.7.1",
    "eslint-plugin-jest": "^23.13.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.7",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "browserslist": [
    "ie >= 11",
    "last 4 Safari major versions",
    "last 10 Chrome major versions",
    "last 10 Firefox major versions",
    "last 4 Edge major versions"
  ],
  "ignore": [
    "examples",
    "docs"
  ]
}
